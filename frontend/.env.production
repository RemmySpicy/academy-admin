# Frontend Production Environment Variables
# These will be used during production builds

# API Configuration (Update these for production)
NEXT_PUBLIC_API_URL=https://your-backend-domain.com
NEXT_PUBLIC_APP_URL=https://your-frontend-domain.com

# Environment
NODE_ENV=production
NEXT_PUBLIC_ENV=production

# Authentication
NEXTAUTH_URL=https://your-frontend-domain.com
# NEXTAUTH_SECRET will be set via deployment platform

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE=10485760  # 10MB
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Features Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_CHAT=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Third-party Services (Set these in your deployment platform)
# NEXT_PUBLIC_SENTRY_DSN=
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=

# Production settings
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_MOCK_API=false