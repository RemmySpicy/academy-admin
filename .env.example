# Academy Management System - Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://academy_user:academy_password@localhost:5432/academy_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=academy_db
DB_USER=academy_user
DB_PASSWORD=academy_password

# Backend Configuration
BACKEND_HOST=localhost
BACKEND_PORT=8000
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Development Environment
NODE_ENV=development
DEBUG=true

# Zoho Books Integration (Optional)
ZOHO_CLIENT_ID=your-zoho-client-id
ZOHO_CLIENT_SECRET=your-zoho-client-secret
ZOHO_REFRESH_TOKEN=your-zoho-refresh-token
ZOHO_BASE_URL=https://books.zoho.com/api/v3

# File Storage Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@academy.com

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# Development Tools
ENABLE_DOCS=true
ENABLE_ADMIN_OVERRIDE=true